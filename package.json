{
  "name": "@wattmaven/wattmaven",
  "version": "0.0.0",
  "private": true,
  "scripts": {
    "install:hooks": "lefthook install",
    "commit": "commit",
    "commitlint": "commitlint",
    "format:check:cspell": "cspell 'blog/**/*.md' 'docs/**/*.md' 'src/pages/**/*.md' --config cpsell.json",
    "format:check:prettier": "prettier --check .",
    "format:fix:prettier": "prettier --write .",
    "format:check": "run-s format:check:*",
    "format:fix": "run-s format:fix:*",
    "lint:check": "eslint . --max-warnings 0",
    "lint:fix": "eslint . --fix",
    "fix": "run-s *:fix",
    "docusaurus": "docusaurus",
    "start": "docusaurus start",
    "build": "docusaurus build",
    "swizzle": "docusaurus swizzle",
    "deploy": "docusaurus deploy",
    "clear": "docusaurus clear",
    "serve": "docusaurus serve",
    "write-translations": "docusaurus write-translations",
    "write-heading-ids": "docusaurus write-heading-ids",
    "typecheck": "tsc",
    "pre-commit-tasks": "turbo format:check lint:check build",
    "ci:smoke-test": "turbo format:check lint:check build"
  },
  "dependencies": {
    "@docusaurus/core": "3.8.0",
    "@docusaurus/preset-classic": "3.8.0",
    "@mdx-js/react": "^3.0.0",
    "clsx": "^2.0.0",
    "prism-react-renderer": "^2.3.0",
    "react": "^19.0.0",
    "react-dom": "^19.0.0"
  },
  "devDependencies": {
    "@commitlint/cli": "19.8.1",
    "@commitlint/config-conventional": "19.8.1",
    "@commitlint/prompt-cli": "19.8.1",
    "@commitlint/types": "19.8.1",
    "@docusaurus/module-type-aliases": "3.8.0",
    "@docusaurus/tsconfig": "3.8.0",
    "@docusaurus/types": "3.8.0",
    "@eslint/js": "9.28.0",
    "cspell": "8.19.4",
    "eslint": "9.28.0",
    "eslint-config-prettier": "10.1.5",
    "eslint-plugin-prettier": "5.4.1",
    "globals": "16.2.0",
    "lefthook": "1.11.13",
    "npm-run-all2": "7.0.2",
    "prettier": "3.5.3",
    "prettier-plugin-organize-imports": "4.1.0",
    "turbo": "2.5.4",
    "typescript": "5.8.3",
    "typescript-eslint": "8.33.1"
  },
  "browserslist": {
    "production": [
      ">0.5%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 3 chrome version",
      "last 3 firefox version",
      "last 5 safari version"
    ]
  },
  "engines": {
    "node": ">=18.0"
  },
  "packageManager": "pnpm@10.11.1"
}
